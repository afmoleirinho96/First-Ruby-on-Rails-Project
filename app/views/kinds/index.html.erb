


<div class="smart-green">
    <p id="notice"><%= notice %></p>


  <%a = 2*11 %>

    <h1>Listing kinds of Contacts  <%= @myname %> </h1>

    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.description %></td>
            <td><%= link_to 'Show', kind, class:"btn btn-light" %></td>
            <td><%= link_to 'Edit', edit_kind_path(kind), class:"btn btn-light" %></td>
            <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  <%= link_to 'New Kind', new_kind_path, class:"btn btn-primary" %>
</div>