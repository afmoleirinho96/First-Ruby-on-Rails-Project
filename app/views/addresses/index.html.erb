<div class="smart-green">
    <p id="notice"><%= notice %></p>


  <div class="container">
    <h1>Listing Addresses</h1>
    <table>
        <tr>
          <th class="col">Street</th>
          <th class="col">City</th>
           <th class="col">Contact</th>
           <th class="col-9"> Info</th>
          <th class="col-9"> Edit</th>
            <th class="col-9"> Delete</th>

        </tr>


        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.street %></td>
            <td><%= address.city %></td>
            <td><%= address.contact_id %></td>
            <td><%= link_to 'Show', address, class:"btn btn-light" %></td>
            <td><%= link_to 'Edit', edit_address_path(address), class:"btn btn-light" %></td>
            <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
  <%= paginate @addresses %>
  <br>

  <%= link_to 'New Address', new_address_path, class:"btn btn-primary" %>
</div>